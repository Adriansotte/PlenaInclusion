<!doctype html>
<html>

<head>
    <title>Google SignIn</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            padding-top: 70px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="jumbotron">
            <h1 class="text-primary  text-center"><span class="fa fa-user"></span> Profile Information</h1>
            <div class="row">
                <div class="col-sm-6">
                    <div class="well">
                        <p>
                            <strong>Id</strong>: <%= user.id %><br>
                                <strong>Email</strong>: <%= user.emails[0].value %><br>
                                    <strong>Name</strong>: <%= user.displayName %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="well">
                    <h2 class="text-primary"><span class="fa fa-plus"></span> Acortar URL</h2>
                    <form action="/acortar-url" method="post">
                        <div class="form-group">
                            <label for="Url">Introduce la Url:</label>
                            <input type="text" class="form-control" name="origUrl" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Acortar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="well">
                    <h2 class="text-primary"><span class="fa fa-plus"></span> Editar URL</h2>
                    <form action="/editarUrl" method="post">
                        <div class="form-group">
                            <label for="Url">Introduce la Url acortada:</label>
                            <input type="text" class="form-control" name="shortUrl" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Acortar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="container my-3">
        <div class="row">
            <div class="col-sm-6">
                <div class="well">
                    <h2 class="text-primary"><span class="fa fa-list"></span> Ver mis URLs Acortadas</h2>
                    <a href="/listaURL" class="btn btn-primary">Ver URLs</a>
                </div>
            </div>
        </div>
    </div>

    <div class="container my-3">
        <div class="row">
            <div class="col-sm-6">
                <div class="well">
                    <h2 class="text-primary"><span class="fa fa-list"></span> Ver todas las URLs Acortadas
                    </h2>
                    <a href="/listaURLTodas" class="btn btn-primary">Ver URLs</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>